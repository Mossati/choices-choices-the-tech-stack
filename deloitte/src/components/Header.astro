---
import Button from '@components/Button.astro';

let loggedIn = true;
---

<header>
    <h2><a href="/">Deloitte<span>.</span> <span>| Mobility App</span></a></h2>

    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/overview">Overview</a></li>
        <li><a href="/wizard">Wizard</a></li>
    </ul>


    {!loggedIn ? (
        <Button href="/login" element={1} text="login"/>
    ) : (
        <div>
            <div class="img-container">
                <img src="/images/profiel.jpg" alt="profiel foto">
            </div>
            <a href="/profile">Mohammed</a>
        </div>
    )}
</header>

<style>
    header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 5rem;
        position: sticky;
    }

    ul {
        list-style-type: "";
        display: none;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 1rem;
    }

    a {
        display: inline-block;
        text-decoration: none;
        color: var(--black);
        transition: 0.2s ease-in;
    }

    a:hover {
        color: var(--accent);
    }

    span {
        color: var(--primary);
    }

    span:nth-child(2) {
        font-weight: 300;
        font-style: italic;
        font-size: 1rem;
    }

    div {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }

    .img-container {
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 50%;
        overflow: hidden;
        margin-right: 1rem;
        border: 0.1rem solid var(--border);
    }

    img {
        object-fit: cover;
        width: 100%;
        height: 100%;
    }

    @media only screen and (min-width: 768px) {
        ul {
            display: flex;
        }
    }
</style>