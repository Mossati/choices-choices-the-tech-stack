---
import Button from '@components/Button.astro';
import Input from '@components/Input.astro';
---

<footer>
    <section>
        <div>
            <h2>Navigatie</h2>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/overview">Overview</a></li>
                <li><a href="/wizard">Wizard</a></li>
            </ul>
        </div>

        <div>
            <h2>Socials</h2>
            <ul>
                <li><a href="facebook.nl">Facebook</a></li>
                <li><a href="instagram.nl">Instagram</a></li>
                <li><a href="twitter.nl">Twitter</a></li>
            </ul>
        </div>

        <div>
            <h2>Nieuwsbericht</h2>
            <p>Abboneer voor updates over de mobiliteitspakketten en wizard.</p>
            <form>
                <label>
                    E-mail
                    <Input type="email" placeholder="enter your mail..."/>
                </label>
                <Button element={0} text="abboneer"/>
            </form>
        </div>
    </section>

    <section>
        <hr>
        <p>Â© 2024 Deloitte <a href="/">See Terms of Use</a> for more information.</p>
    </section>
</footer>

<style>
    footer {
        background-color: var(--background-light);
        padding: 1rem 5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    section {
        display: flex;
        flex-direction: column;
        justify-content: start;
        align-items: start;
        flex: 1;
        width: 100%;
        gap: 1rem;
    }

    section:nth-child(2) {
        flex-direction: column;
    }

    div {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: start;
    }

    h2 {
        color: var(--black);
    }

    a, p, label {
        text-decoration: none;
        color: var(--black);
    }

    p a {
        text-decoration: underline;
        color: var(--primary-dark);
    }

    a:hover {
        color: var(--accent);
    }

    ul {
        list-style-type: "";
    }

    form {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-top: 1rem;
        gap: 1rem;
    }

    hr {
        border: none;
        height: 0.1rem;
        background-color: var(--primary-dark);
        width: 100%;
        margin: 1rem 0;
    }

    @media only screen and (min-width: 768px) {
        section, form {
            flex-direction: row;
        }
    }
</style>