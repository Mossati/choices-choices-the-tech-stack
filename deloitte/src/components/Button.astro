---
interface Props {
	text: string;
    type?: string;
    href?: string;
    style?: string;
    element: number;
}

const { text, type, href, style, element } = Astro.props;
---

{element === 0 ? (
    <button type={type} class={style}>{text}</button>
) : (
    <a href={href} class={style}>{text}</a>
)}

<style>
    button, a {
        display: inline-block;
        border-radius: 1rem;
        border: 0.1rem solid var(--border);
        background-image: linear-gradient(66.77deg, var(--primary), var(--primary-light));
        color: var(--white);
        padding: 0.5rem 2rem;
        transition: 0.2s ease-in;
        font-size: 1rem;
        cursor: pointer;
        text-decoration: none;
    }

    button:hover, a:hover {
        border: 0.1rem solid var(--border);
        background-image: linear-gradient(66.77deg, var(--secondary), var(--secondary-light));
        color: var(--white);
    }

    .light {
        background-image: linear-gradient(66.77deg, var(--white), var(--gray-light));
        color: var(--black);
    }
</style>