---
interface Props {
	title: string;
	body: string;
	src: string;
	alt: string;
}

const { title, body, src, alt } = Astro.props;
---

<li>
	<img src={src} alt={alt}>
	<h2>{title}</h2>
	<p>{body}</p>
</li>
<style>
	li {
		border-radius: 1rem;
		padding: 1rem;
		background-image: linear-gradient(66.77deg, var(--primary), var(--primary-light));
		border: 0.1rem solid var(--border);
		flex: 1;
	}

	h2, p {
		color: var(--white);
	}

	img {
		width: 100%;
		height: 10rem;
		object-fit: cover;
		border: 0.1rem solid var(--border);
		border-radius: 1rem;
		background-color: var(--white);
	}
</style>
